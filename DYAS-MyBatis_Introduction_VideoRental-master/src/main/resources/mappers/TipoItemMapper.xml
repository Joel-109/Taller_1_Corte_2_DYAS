<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.unisabana.dyas.sampleprj.dao.mybatis.mappers.TipoItemMapper">

<select id="getTiposItems" parameterType="map" resultMap='TipoItemResult'>
  select * FROM VI_TIPOITEM
</select>

<select id="getTipoItem" parameterType="map" resultMap='TipoItemResult'>
  select id, descripcion
  FROM VI_TIPOITEM
  WHERE id = #{idcli}
</select>

<insert id='addTipoItem' parameterType='map'>
    INSERT INTO VI_TIPOITEM (descripcion)
    VALUES (#{descripcion})
</insert>
    
<resultMap type='TipoItem' id='TipoItemResult'>
      <id property='id' column='id'/>
      <result property='descripcion' column='descripcion'/>
</resultMap>
                
</mapper>